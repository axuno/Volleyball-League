@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["New Password Confirmation"].Value;
}
<h2 class="h2">@ViewData["Title"].</h2>
<hr/>
<div>
    <site-alert type="Success">
        @Localizer["The new password is saved and activated"].<br />
    </site-alert>
    <p>
        <a asp-controller="@nameof(League.Controllers.Account)" asp-action="@nameof(League.Controllers.Account.SignIn)" class="btn btn-lg btn-primary col-sm-8 col-md-5">@Localizer["Sign-in now"]</a>.
    </p>
</div>
