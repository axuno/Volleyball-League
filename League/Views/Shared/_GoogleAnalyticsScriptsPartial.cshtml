@using Microsoft.Extensions.Configuration
@using League.ConfigurationPoco
@inject IConfiguration Configuration
@{
    var googleConfig = Configuration.Get<GoogleConfiguration>() ?? new GoogleConfiguration();
}
@*<!-- Global site tag (gtag.js) - Google Analytics -->*@
<script async src="https://www.googletagmanager.com/gtag/js?id=@googleConfig.AnalyticsTrackingId"></script>
<script type="text/javascript">
    //<![CDATA[
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '@googleConfig.AnalyticsTrackingId', {cookie_flags: 'SameSite=None;Secure'});
    //]]>
</script>